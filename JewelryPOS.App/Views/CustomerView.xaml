<Window x:Class="JewelryPOS.App.Views.CustomerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Müşteri Ekranı"
        WindowStyle="None" 
        Background="#FAFAFA"
        WindowStartupLocation="Manual"
        WindowState="Normal">
    <Grid>
        <!-- Üst Bar -->
        <Border Background="White" Height="60" VerticalAlignment="Top" Padding="20,10">
            <Border.Effect>
                <DropShadowEffect Color="#B0B0B0" Direction="270" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>
            <TextBlock Text="Müşteri Ekranı" FontSize="18" FontWeight="Bold" FontFamily="Segoe UI" 
                       Foreground="#333333" VerticalAlignment="Center"/>
        </Border>

        <!-- İçerik Alanı -->
        <Border Margin="20,70,20,20" Background="#FFFFFF" CornerRadius="10" Padding="30">
            <Border.Effect>
                <DropShadowEffect Color="#B0B0B0" Direction="270" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="{Binding ProductName}" Style="{StaticResource FormHeaderStyle}" 
                           Foreground="#333333" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding OriginalPrice, StringFormat='Fiyat: {0:C}'}" 
                           FontSize="24" FontFamily="Segoe UI" Foreground="#333333" 
                           Margin="0,20,0,0" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding DiscountedPrice, StringFormat='İndirimli Fiyat: {0:C}'}" 
                           FontSize="28" FontFamily="Segoe UI" Foreground="#4CAF50" 
                           Margin="0,20,0,0" HorizontalAlignment="Center"
                           Visibility="{Binding DiscountedPrice, Converter={StaticResource NullToVisibilityConverter}}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
