<Window x:Class="JewelryPOS.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Jewelry POS"
        WindowState="Maximized"
        MinWidth="1280" MinHeight="720"
        Background="#f4f4f9">

    <Window.Resources>
        <!-- Menü Buton Stili -->
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Sol Menü -->
        <Border Background="#2C3E50" Width="200" HorizontalAlignment="Left">
            <StackPanel>
                <TextBlock Text="Jewelry POS" Foreground="White" FontSize="20" 
                           FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,20"/>

                <Button Content="Ürünler" Style="{StaticResource MenuButton}" Command="{Binding OpenProductsCommand}"/>
                <Button Content="Satışlar" Style="{StaticResource MenuButton}" Command="{Binding OpenSalesCommand}"/>
                <Button Content="Ayarlar" Style="{StaticResource MenuButton}" Command="{Binding OpenSettingsCommand}"/>
            </StackPanel>
        </Border>

        <!-- Üst Bar -->
        <Border Background="White" Height="60" VerticalAlignment="Top" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <!-- Sol taraf için genişlik -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Sağ taraf için otomatik genişlik -->
                </Grid.ColumnDefinitions>

                <!-- Sol Taraf: Ana Sayfa Başlığı -->
                <TextBlock Text="Ana Sayfa" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="0"/>

                <!-- Sağ Taraf: Kullanıcı Bilgileri ve Butonlar -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1" Margin="0,0,20,0">
                    <TextBlock Text="{Binding LoggedInUser}" FontSize="14" Foreground="Black" VerticalAlignment="Center" 
                       FontWeight="SemiBold" Margin="0,0,10,0"/>

                    <Button Content="Kullanıcı Değiştir" Background="#90CAF9" Foreground="White" 
                    Width="120" Height="30" Command="{Binding SwitchUserCommand}" 
                    Margin="0,0,10,0" Cursor="Hand"/>

                    <Button Content="Çıkış Yap" Background="#E57373" Foreground="White" 
                    Width="100" Height="30" Command="{Binding LogoutCommand}" 
                    Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>


        <!-- Ana İçerik Alanı -->
        <ContentControl Content="{Binding CurrentView}" Margin="210,70,10,10"/>
    </Grid>
</Window>
