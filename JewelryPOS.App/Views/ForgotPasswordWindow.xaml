<Window x:Class="JewelryPOS.App.Views.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Şifremi Unuttum" Height="368" Width="495" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Background="#f4f4f9" Margin="0,0,0,-6">
        <TextBlock Text="E-posta Adresinizi Girin" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18" Margin="0,30,0,0" />

        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Background="White" Padding="20" BorderBrush="#d3d3d3" BorderThickness="1" CornerRadius="10">
            <StackPanel>
                <!-- E-posta Girişi -->
                <TextBlock Text="E-posta" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5" />
                <TextBox x:Name="EmailTextBox" Width="250" Height="40" Margin="0,10,0,10" BorderBrush="#d3d3d3" BorderThickness="1" Padding="10"/>

                <!-- Şifreyi Sıfırla Butonu -->
                <Button Content="Şifreyi Sıfırla" Width="250" Height="40" Margin="0,10,0,10" Background="#4CAF50" Foreground="White" FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="#4CAF50" BorderThickness="1" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
